BoxLayoutExample:
    canvas.before:
        Color:
            rgba:(75/255,0,130/255,1)
        Rectangle:
            pos: self.pos
            size: self.size
            source: "background.jpg"

<BoxLayoutExample>:
    Label:
        text:"Pet Age: 1"
        # x, center_x right
        # y, center_y top
        size: self.texture_size
        pos_hint: {"center_x":0.2,"top":1.4}
        
    Label:
        text:"Name: Daddy Raggy"
        size: self.texture_size
        pos_hint: {"center_x":0.325,"top":.95}
    Label:
        text: root.status
        size: self.texture_size
        pos_hint: {"center_x":0.325,"top":.85}    
    Label:
        text:"Happiness: What is that?"
        size: self.texture_size
        pos_hint: {"center_x":0.325,"top":.65}
    Label:
        text:"Hunger: For dans soul"
        size: self.texture_size
        #font_size: "20dp"
        pos_hint: {"center_x":0.325,"top":0.75}
    ProgressBar:
        id: my_progress_bar
        text: "health"
        max:100
        #root.change_health(self)
        #value: root.change_health(self)
        value: root.changedFinal
        pos_hint: {'x':.5 , 'y':-.15}
        
        size_hint_x: .2
    TextInput:
        size_hint: None,1
        width: "100dp"
        #oh shit what if we allowed the user to talk to the pet.
        #give the pet certain resposes based on text

    Image:
        source: "raghav.png"
        allow_stretch: False
        keep_ratio: True
        size_hint_y: None
        size_hint_x: None
        width: 270
        height: 270
        allow_stretch: True
        pos_hint: {"center_x":0.5,"center_y":0.70 }